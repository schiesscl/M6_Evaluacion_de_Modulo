# ==================================
# CONFIGURACIÓN DE DJANGO
# ==================================

# Clave secreta de Django (generar una nueva para producción)
# Puedes generar una con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=tu-clave-secreta-super-segura-aqui-cambiar-en-produccion

# Modo de depuración (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por coma)
# En desarrollo: localhost,127.0.0.1
# En producción: tu-dominio.com,www.tu-dominio.com,tu-ip-servidor
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# ==================================
# BASE DE DATOS (Opcional - Para PostgreSQL en producción)
# ==================================

# Tipo de base de datos (sqlite3, postgresql, mysql)
DB_ENGINE=django.db.backends.sqlite3

# Solo para PostgreSQL/MySQL
DB_NAME=gestor_tareas_db
DB_USER=postgres
DB_PASSWORD=tu_password_seguro
DB_HOST=localhost
DB_PORT=5432

# ==================================
# CONFIGURACIÓN DE SEGURIDAD
# ==================================

# Cookies seguras (True en producción con HTTPS)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Redirigir HTTP a HTTPS (True en producción)
SECURE_SSL_REDIRECT=False

# ==================================
# CONFIGURACIÓN DE EMAIL (Opcional)
# ==================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-de-aplicacion

# ==================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS
# ==================================

STATIC_URL=/static/
STATIC_ROOT=staticfiles

# ==================================
# OTRAS CONFIGURACIONES
# ==================================

# Zona horaria
TIME_ZONE=America/Santiago

# Idioma
LANGUAGE_CODE=es-es